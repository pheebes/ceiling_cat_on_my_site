<div class="row">
  <div class="col-sm-12 col-centered">
    <p id="notice"><%= notice %></p>

    <h1>Listing Reports</h1>
    <br>
    <% unless @reports.empty? %>
      <table>
        <thead>
          <tr>
            <th>Author</th>
            <th>Title</th>
          </tr>
        </thead>

        <tbody>
          <% @reports.each do |report| %>
            <tr>
              <td><%= report.author %></td>
              <td><%= report.title %></td>
            </tr>
            <tr>
              <td colspan="2" class="add-space"><%= link_to 'Show', report, class: "btn btn-primary" %>
                <% if (current_user && (report.user == current_user)) %>
                  <%= link_to 'Edit', edit_report_path(report), class: "btn btn-info" %>
                  <%= link_to 'Destroy', report, class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <br>
    <br>
    <%= link_to 'New Report', new_report_path, class: "btn btn-primary push-right" %>
  </div><!--col-sm-12 col-centered-->
</div><!--row-->